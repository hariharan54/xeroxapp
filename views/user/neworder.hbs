<script>
    $(document).ready(function () {
        $('.js-example-basic-single').select2();
    });

    function calculate(){
            let no_of_copies = document.getElementById("copies").value;
            let no_of_pages = document.getElementById("pages").value;
            

            if (no_of_copies != null && no_of_pages != null) {
                let cost=no_of_copies * no_of_pages;
                document.getElementById("cost").value=cost;

            }
        }
    

</script>

