<body class="bg-light">

    <div class="account-pages my-5 pt-sm-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-8 col-lg-6 col-xl-5">
                    <div class="card overflow-hidden">
                        <div class="bg-white bg-soft">
                            <div class="row">
                                <div class="col-7">
                                    <div class="text-primary p-4">
                                        <h5 class="text-primary">Order Now</h5>
                                        <p>Enter the details below</p>
                                    </div>
                                </div>
                                <div class="col-5 align-self-end">
                                    <img src="../assets/home_page_img.jpg" alt="" class="img-fluid">
                                </div>
                            </div>
                        </div>
                        <div class="card-body pt-0">
                            <div class="p-2">
                                <form class="form-horizontal" action="loginbackend.php" method="POST">
                                    <div class="mb-3">
                                        <label for="store" class="form-label">store</label>
                                        <br>
                                        <select name="store" id="store" class="js-example-basic-single form-control" style="width:100%">
                                            {{#each storeObj}}
                                            <option value="storeid1">{{this.store_name}}</option>
                                            {{!-- <option value="storeid2">B</option>
                                            <option value="storeid3">C</option>
                                            <option value="storeid4">D</option> --}}
                                            {{/each}}
                                        </select>
                                    </div>
                                    <div class="mb-3">
                                        <label for="doclink" class="form-label">Link</label>
                                        <input type="text" class="form-control" id="doclink" name="doclink"
                                            placeholder="Enter the file link" required>
                                    </div>

                                    <div class="mb-3">
                                        <label for="copies" class="form-label">No of copies</label>
                                        <input type="number" class="form-control" id="copies" name="copies" placeholder="Enter no of copies" onkeyup="calculate()">
                                    </div>

                                    <div class="mb-3">
                                        <label for="pages" class="form-label">No of pages</label>
                                        <input type="number" class="form-control" id="pages" name="pages" placeholder="Enter no of pages per copy" onkeyup="calculate()">
                                    </div>

                                    <div class="mb-3">
                                        <label for="comments" class="form-label">Comments</label>
                                        <textarea class="form-control" id="store_address" name="store_address" placeholder="Enter your comments here" rows="2"
                                            cols="50"></textarea>

                                    </div>

                                    <div class="mb-3">
                                        <label for="pickuptime" class="form-label">Pick up time</label>
                                        <input type="time" class="form-control" id="pickuptime" name="pickuptime" placeholder="Enter pick up time">
                                    </div>

                                    <div class="mb-3">
                                        <label for="totalcost" class="form-label">Total Cost</label>
                                        <input type="number" value="0" class="form-control" id="cost" name="cost" disabled required>
                                    </div>


                                    <div class="mt-3 d-grid">
                                        <button class="btn btn-primary waves-effect waves-light"
                                            type="submit">Submit</button>
                                    </div>
                                </form>
                            </div>

                        </div>
                    </div>
                    <!-- <div class="mt-5 text-center">

